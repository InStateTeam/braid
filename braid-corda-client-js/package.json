{
  "name": "braid-corda-client",
  "version": "1.0.0-SNAPSHOT",
  "description": "service proxies for braid corda services",
  "main": "dist/braid-corda-proxy.js",
  "repository": "https://gitlab.bluebank.io/em-tech/hermes",
  "scripts": {
    "clean": "npm unlink braid-client && rm -rf dist && rm -rf node_modules",
    "build": "npm link braid-client && npm install && babel src -d dist",
    "test:integration": "npm run build && npm run test:run",
    "test:run": "mocha --exit --require babel-core/register",
    "watch": "npm-watch"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "fuzz",
      "email": "fuzz@bluebank.io"
    }
  ],
  "license": "ISC",
  "dependencies": {
    "braid-client": "^1.0.0-SNAPSHOT",
    "xhr": "^2.4.1"
  },
  "browser": {
    "request": "xhr"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "mocha": "^4.1.0",
    "npm-watch": "^0.3.0"
  },
  "publishConfig": {
    "registry": "http://bluebank-nexus.uksouth.cloudapp.azure.com/repository/npm-hosted/"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js",
      "quiet": false,
      "legacyWatch": false,
      "delay": 500
    }
  }
}
