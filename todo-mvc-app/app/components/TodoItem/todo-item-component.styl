.todo-item-component
  background linear-gradient(to bottom right, rgba(255,255,255, 0.0), rgba(255,255,255, 0.2))
  border 1px solid rgba(255,255,255, 1)
  border-bottom none
  height 40px
  position relative

  &:hover button
      display inline-block
  
  &:last-child
    border-bottom 1px solid rgba(255, 255, 255, 1)
  
  .tick
    background rgba(255, 255, 255, 0.2)
    border 4px solid #FFF
    display inline-block
    float left
    height 14px
    left 9px
    position relative
    top 9px
    width 14px
  

    label 
      background url("svg/tick.svg") no-repeat
      width 27px
      height 27px
      cursor pointer
      left -4px
      opacity 0.0
      position absolute
      top -6px

      &:hover 
        opacity 0.5
      
    input[type=checkbox] 
      visibility hidden
      &:checked + label 
        opacity 1     
        

  span 
    border 0px solid transparent
    border-left 1px solid #FFF
    font-size 18px
    left 40px
    padding 10px
    position absolute
    right 35px
  .index
    left -140px
    position abosolute
    top 1px 

  button
    background none 
    border none
    cursor pointer
    display none
    float right
    margin 9px 5px
    padding 0