section

  &.endpoint
    color rgba(0, 0, 0, 0.8)
    font-family Courier New, Courier, monospace
    height 50px
    position relative

    div
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)

      label 
        color rgba(0, 0, 0, 0.8)

      span
        border 1px solid rgba(0, 0, 0, 0.8)
        border-radius 3px
        padding 5px 10px
  
  &#container 
    border 1px solid grey
    height 100%
    margin 10px auto
    padding 5px
    width 70%
  

  &.functions
    margin 0 auto
    width 70%

    #services 
      background-color #af8b46
      color white
      border none
      cursor pointer
      font-size 16px
      padding 16px