.endpoint
  background #ECECEC
  color rgba(0, 0, 0, 0.8)
  height 50px
  padding-bottom 5px
  position relative
  
  div
    position absolute
    left 40%
    top 50%
    transform translate(0%, -50%)

    label 
      color rgba(0, 0, 0, 0.8)

    span
      background #FFF
      border 1px solid rgba(0, 0, 0, 0.8)
      border-radius 3px
      padding 5px 10px
      
#container  
  overflow-x hidden
  overflow-y scroll
  position relative

@media screen and (max-width: 1159px)
  #container 
    #editor 
      .functions
        button 
          font-size 12px
          padding 5px 10px

          &#deleteBtn
            float none
        
        input[type=text]
          font-size 12px
          height 22px
          margin-bottom 3px
          width 200px



