section

  &.endpoint
    background #ECECEC
    color rgba(0, 0, 0, 0.8)
    height 50px
    position relative

    div
      position absolute
      left 40%
      top 60%
      transform translate(0%, -50%)

      label 
        color rgba(0, 0, 0, 0.8)

      span
        background #FFF
        border 1px solid rgba(0, 0, 0, 0.8)
        border-radius 3px
        padding 5px 10px
      
  &#container 
    background #ECECEC
    display flex
    height 100%    
    margin 0 auto
    padding-top 10px

    .services-list
      background #000
      color rgba(255, 255, 255, 0.9)
      flex-basis 40%
      flex-grow 1
      font-size 20px
      margin 0 5px 5px 0
      transition width 0.5s

      ul
        margin 0
        padding 0
        text-align center
        
        li
          border-bottom 2px solid rgba(255, 255, 255, 0.9)
          list-style none
          padding 7px 10px
          cursor pointer
    
    .calls
      flex-grow 0
      width 0
      transition 0.5s

      .implemented-functions
        list-style none
        padding-left 10px

        li 
          background #49cc90
          border 1px solid #000
          border-radius 3px
          color #FFF
          margin-bottom 2px
          padding 7px 10px

      .stubbed-functions
        list-style none
        padding-left 10px

        li 
          background #49cc90
          border 1px solid #000
          border-radius 3px
          color #FFF
          margin-bottom 2px
          padding 7px 10px

    #editor
      border 1px solid #000
      flex-grow 1
      height 100%
      margin auto 10px      
      padding 5px

      .functions
        margin 5px 3px

        button 
          background linear-gradient(#DDD, #BBB)
          border 1px solid #888
          border-radius 2px
          color rgba(0, 0, 0, 1.0)
          font-family 'SSP-Bold' 
          font-size 16px
          margin auto 3px
          outline none
          padding 5px 20px
          vertical-align top        

          &:disabled
            background rgba(0, 0, 0, 0.4)  

          &:active 
            box-shadow 0 0 5px 2px #333
            -webkit-transform scale(0.8, 0.95)
            -moz-transform scale(0.95, 0.95)
            -ms-transform scale(0.95, 0.95)
            transform scale(0.95, 0.95)
        
          &#createServiceBtn
            border-left none
            border-radius 0 2px 2px 0

          &#deleteBtn
            float right

        input[type=text]
          border 1px solid #000
          border-right none
          font-size 16px
          height 27px
          margin-right -8px
          outline none
          padding-bottom 2px
          padding-left 10px
          width 250px

          &::-webkit-input-placeholder  /* Chrome/Opera/Safari */
            color #CCC     
            font-style italic
            font-weight 100

          ::-moz-placeholder  /* Firefox 19+ */
            color #CCC 
            font-style italic
            font-weight 100
          
          :-ms-input-placeholder  /* IE 10+ */
            color #CCC
            font-style italic
            font-weight 100

          &::-moz-placeholder  /* Firefox 18- */
            color #CCC 
            font-style italic
            font-weight 100
          

      #monaco
        border-top 1px solid #000 
        height 100%
        margin-top 10px
        padding-top 10px

