.endpoint
  background #ECECEC
  color rgba(0, 0, 0, 0.8)
  height 50px
  padding-bottom 5px
  position relative
  
  div
    position absolute
    left 40%
    top 50%
    transform translate(0%, -50%)

    label 
      color rgba(0, 0, 0, 0.8)

    span
      background #FFF
      border 1px solid rgba(0, 0, 0, 0.8)
      border-radius 3px
      padding 5px 10px
      
#container  
  overflow-x hidden
  overflow-y scroll
  position relative

  .services-list
    background #000
    color rgba(255, 255, 255, 0.9)
    display inline-block
    float left
    font-size 20px
    margin 0
    width 250px 
    z-index 100

    &:after
      background #000
      content ''
      padding 1000px 125px
      position absolute
      z-index 10 

    

    ul
      margin 0
      padding 0
      text-align center
      
      li
        border-bottom 2px solid rgba(255, 255, 255, 0.9)
        list-style none
        padding 7px 10px
        cursor pointer
  
  .calls
    background #ECECEC
    bottom 0
    display inline-block
    left 0px
    padding-left 5px
    position absolute
    top 0
    transition all 0.3s
    width 225px
    z-index -1

    ul
      background #ECECEC
      list-style none
      margin 0 5px 20px 0
      padding 0
      width 220px

      li          
        box-sizing border-box
        border-radius 3px
        color #FFF
        margin-bottom 2px
        padding 5px 10px 6px
        width 220px

        &:hover
          cursor pointer

        .title
          font-size 20px
          font-weight normal 
          margin 0
                  
        .content
          &.hide
            display none
          
          div
            border-top 1px solid #0A0

            &.description
              margin-top 10px
        
      &.implemented-functions
      
        li
          background #49CC90
          border 2px solid #49CC90     
        
      &.stubbed-functions
      
        li
          background #FCA130;
          border 2px solid #FCA130;

  #editor
    background: #ECECEC
    border 1px solid #000
    box-sizing border-box
    display inline-block
    height 100vh
    padding 5px
    position relative
    right 0
    width calc(100% - 250px)
    transition all 0.5s

    .functions
      margin 5px 3px

      button 
        background linear-gradient(#DDD, #BBB)
        border 1px solid #888
        border-radius 2px
        color rgba(0, 0, 0, 1.0)
        font-family 'SSP-Bold' 
        font-size 16px
        margin auto 6px auto 0
        outline none
        padding 5px 20px
        vertical-align top        

        &:disabled
          background rgba(0, 0, 0, 0.4)  

        &:active 
          box-shadow 0 0 5px 2px #333
          -webkit-transform scale(0.8, 0.95)
          -moz-transform scale(0.95, 0.95)
          -ms-transform scale(0.95, 0.95)
          transform scale(0.95, 0.95)
      
        &#createServiceBtn
          border-left none
          border-radius 0 2px 2px 0

        &#deleteBtn
          float right

      input[type=text]
        border 1px solid #000
        border-right none
        font-size 16px
        height 27px
        margin-right -8px
        outline none
        padding-bottom 2px
        padding-left 10px
        width 250px

        &::-webkit-input-placeholder  /* Chrome/Opera/Safari */
          color #CCC     
          font-style italic
          font-weight 100

        ::-moz-placeholder  /* Firefox 19+ */
          color #CCC 
          font-style italic
          font-weight 100
        
        :-ms-input-placeholder  /* IE 10+ */
          color #CCC
          font-style italic
          font-weight 100

        &::-moz-placeholder  /* Firefox 18- */
          color #CCC 
          font-style italic
          font-weight 100
      
      .tooltip
        background #000
        border 2px solid #DE0000
        border-radius 3px
        box-sizing border-box
        color #FFF
        padding auto
        position absolute
        opacity 0
        pointer-events none
        text-align center
        top 50px
        width 300px
        z-index 100
        
        &.shown
          opacity 1

        &:before
          content " "
          border 6px solid 
          border-color transparent transparent #DE0000 transparent
          left 30%
          position absolute
          top -14px
          transform translateX(-50%)

        &:after
          content " "
          border 6px solid 
          border-color transparent transparent #000 transparent
          right 70%
          position absolute
          top -11px
          transform translateX(50%)

        ul
          padding-left 0

          li
            display none
            margin-bottom 10px

            &.shown
              display block
              

        

    #monaco
      border-top 1px solid #000
      height calc(100% - 75px)
      margin-top 10px
      padding-top 10px

@media screen and (max-width: 1159px)
  #container 
    #editor 
      .functions
        button 
          font-size 12px
          padding 5px 10px

          &#deleteBtn
            float none
        
        input[type=text]
          font-size 12px
          height 22px
          margin-bottom 3px
          width 200px




  