header 
  background rgba(0,0,0,1) url("png/header.png") no-repeat 99% 5px
  color rgba(239, 0, 23, 1)
  height 60px
  margin-bottom 0 
  position relative

  img 
    height 40px
    padding-left 10px
    position relative
    top 50%
    transform translateY(-50%)

  span 
    margin-left 30px
    font-size 30px
    font-family "SSP-Bold"
    letter-spacing 2px
    position absolute
    top 50%
    transform translateY(-50%)


