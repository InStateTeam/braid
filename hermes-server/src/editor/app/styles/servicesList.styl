.services-list
  background #000
  color rgba(255, 255, 255, 0.9)
  display inline-block
  float left
  font-size 20px
  margin 0
  min-height 1px
  width 250px 
  z-index 100

  &:after
    background #000
    content ''
    padding 1000px 125px
    position absolute
    z-index 10

  ul
    margin 0
    padding 0
    text-align center
    
    li
      border-bottom 2px solid rgba(255, 255, 255, 0.9)
      list-style none
      padding 7px 10px
      cursor pointer